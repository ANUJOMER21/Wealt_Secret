<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
android:id="@+id/fundname"
        android:layout_marginBottom="5dp"
        android:text="fund name"
        android:layout_toLeftOf="@id/y3return"
        android:layout_alignParentStart="true"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
android:id="@+id/y3return"
        android:layout_marginBottom="10dp"
        android:text="3y"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/schemecategory"
        android:layout_marginBottom="10dp"
        android:text="schemecat"
        android:layout_below="@id/fundname"
android:layout_toLeftOf="@id/y3"
        android:layout_alignParentStart="true"
        android:textAlignment="viewStart"
        android:textColor="#484848"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/y3return"
        android:id="@+id/y3"
        android:layout_marginBottom="10dp"
        android:text="3y"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="#484848"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/schemecategory"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="Current Nav"
android:layout_alignParentStart="true"
   />
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="0"

                android:id="@+id/currentnav"/>
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
android:text="Fundhouse:-"

        android:id="@+id/fundhouse"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Returns"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Month"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/ubuntum"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:id="@+id/month"
                    android:fontFamily="@font/ubuntum"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                android:background="@drawable/background"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Year"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/ubuntum"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:id="@+id/year"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/ubuntum"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Year"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/ubuntum"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/year3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/ubuntum"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</com.google.android.material.card.MaterialCardView>